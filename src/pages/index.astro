---
import Product from "../components/Product.astro";
import { products } from "../data/products";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main>
    <div class="mx-auto max-w-6xl">
      <div>
        <h1
          class="leading-relaxed font-extrabold text-indigo-800 text-4xl text-center mt-4 py-2 sm:py-4"
        >
          Get Doggy Stickers!
        </h1>
        <p class="max-w-xl text-center px-2 mx-auto text-gray-600">
          Times are tough. Liven up your home with some cute Doggy Stickers. üê∂
        </p>
      </div>
      <div
        class="py-12 max-w-6xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-8"
      >
        {products.map((product) => <Product {product} />)}
      </div>
    </div>
  </main>
</Layout>
